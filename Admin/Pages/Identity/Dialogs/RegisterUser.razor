<EditForm Model="@_userRegistration" OnValidSubmit="SubmitAsync">
    <MudDialog>
        <TitleContent>
            @{
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Class="mr-3 mb-n1" />
                    Register User
                </MudText>
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField Required Margin="Margin.Dense" Variant="Variant.Text" @bind-Value="_userRegistration.UserName" Label="User Name" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField Required Margin="Margin.Dense" Variant="Variant.Text" @bind-Value="_userRegistration.FirstName" Label="First Name" />

                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField Required Margin="Margin.Dense" Variant="Variant.Text" @bind-Value="_userRegistration.LastName" Label="Last Name" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField Required InputType="InputType.Email" Margin="Margin.Dense" Variant="Variant.Text" 
                    @bind-Value="_userRegistration.Email" Label="Email" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField Required Margin="Margin.Dense" Variant="Variant.Text" @bind-Value="_userRegistration.PhoneNumber" Label="Phone Number" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField Required Margin="Margin.Dense" Variant="Variant.Text" InputType="@_passwordInput" Adornment="Adornment.End" 
                        AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" 
                        @bind-Value="_userRegistration.Password" Label="Password" />
                </MudItem>
                <MudItem xs="12" sm="12" md="12">
                    <MudTextField Required Margin="Margin.Dense" Variant="Variant.Text" InputType="InputType.Password" @bind-Value="_userRegistration.ComfirmPassword" Label="Confirm Password" />
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudCheckBox @bind-Checked="@_userRegistration.ActivateUser" Label="Activate User?" Color="Color.Primary"></MudCheckBox>
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudCheckBox @bind-Checked="@_userRegistration.AutoComfirmEmail" Label="Auto Confirm Email?" Color="Color.Primary"></MudCheckBox>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" Class="mr-auto" OnClick="Cancel">Cancel</MudButton>
            @{
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Register</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>
