<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    @if (!_isLoaded)
    {
        <MudCardContent>
            <MudProgressCircular Color="Color.Primary" Size="Size.Medium" Indeterminate="true" />
        </MudCardContent>
    }
    else
    {
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Secondary">@FirstLetterOfName</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body2">@FirstName @LastName</MudText>
                <MudText Typo="Typo.caption">@Email</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    }
</MudCard>
