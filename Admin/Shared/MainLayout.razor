@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView>
    <NotAuthorized>
        <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
            <MudPaper Elevation="0" Class="py-4" Style="width: 500px;">
                <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
                    @Body
                </MudContainer>
            </MudPaper>
        </MudContainer>
    </NotAuthorized>
    <Authorized>
        <MudLayout>
            <MudAppBar Elevation="25">
                <MudHidden Breakpoint="Breakpoint.SmAndDown">
                    <MudIcon Icon="@Icons.Material.Filled.Home" Size="Size.Large" />
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
                    <MudIcon Icon="@Icons.Material.Filled.Home" Class="mr-2" Size="Size.Medium" />
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.Xs">
                    <MudText Typo="Typo.h6" Class="ml-2">ABC Admin</MudText>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                    <MudText Typo="Typo.subtitle2" Class="ml-2">ABC</MudText>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.MdAndUp">
                    <MudIconButton Icon="@Icons.Material.Outlined.Menu" Class="ml-2" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                </MudHidden>
                <MudSpacer />
                <MudMenu Icon="@Icons.Material.Outlined.Person" Color="Color.Inherit" TransformOrigin="Origin.BottomLeft" AnchorOrigin="Origin.BottomLeft" Dense="true" Class="mt-1 ml-4">
                    <ChildContent>
                        <UserCard Class="mt-n2" />
                        <MudDivider Class="mb-2" />
                        <MudListItem Text="Account" Icon="@Icons.Material.Outlined.Person" Href="/account" />
                        <MudListItem Text="Logout" Icon="@Icons.Material.Outlined.Logout" OnClick="Logout" />
                    </ChildContent>
                </MudMenu>
            </MudAppBar>
            <MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Always">
                <NavMenu />
            </MudDrawer>
            <MudMainContent>
                <MudHidden Breakpoint="Breakpoint.SmAndDown">
                    <MudToolBar DisableGutters="true">
                        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" Class="ml-3" />
                    </MudToolBar>
                </MudHidden>
                <MudContainer MaxWidth="MaxWidth.False" Class="mt-1">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
</AuthorizeView>